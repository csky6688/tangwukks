<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#E5E5E5"
    >
	
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#E5E5E5"
    >
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:background="#8866ff00"
	        android:gravity="center"
	        android:text="巡检历史"
	        android:textColor="#000000"
	        android:textSize="22sp" />
   	
	    
	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:background="#E5E5E5"
			    >
		    
			    <EditText
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_weight="2"
			        android:layout_marginLeft="10dip"
			        android:layout_marginRight="10dip"
			        android:id="@+id/input_inspectDate"
			        android:hint="请输入巡检日期"
			        android:background="#ffffff"
			        android:inputType="text" />
    			
			     <Button
			        android:onClick="loginToSystem"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:text="搜索" />
    		
			     <!-- 
			    
			     -->
    		</LinearLayout>
   		
    	
    
   		 
	</LinearLayout>
   		 
    
   
	     <ListView
					    android:id="@+id/listview"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_marginTop="78dp"
					    > 
					   	
					</ListView>
    
          <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginBottom="0dp"
             android:background="#000000"
             android:orientation="horizontal"
             android:layout_alignParentBottom="true"
             android:paddingTop="10dp" >

             <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                 android:onClick="showInspectRecord"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:src="@drawable/history2" />
	              <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="巡检记录"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
   
			</LinearLayout>
			
             <LinearLayout android:orientation="vertical"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                  android:onClick="scanQrCode"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/xunjian3" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="立即巡检"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
			</LinearLayout>
			
             <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                  android:onClick="inspectTask"
                 >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/duty2" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="巡检任务"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
			</LinearLayout>
			
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
                android:onClick="centerInfo"
                >
	             <ImageView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_horizontal"
	                 android:layout_weight="1"
	                 android:src="@drawable/personcenter2" />
	             <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="个人中心"
			        android:textColor="#ffffff"
			        android:textSize="16sp" />
	        </LinearLayout>
         </LinearLayout>

</RelativeLayout>